# ============================================================================
# FastAPI Backend Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!
# ============================================================================

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=CPT Automation Scripts API
APP_VERSION=1.0.0
DEBUG=False
BACKEND_PORT=8000

# ============================================================================
# Supabase Configuration
# ============================================================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# ============================================================================
# Docker Configuration
# ============================================================================
# Docker daemon socket (leave empty for default: unix:///var/run/docker.sock)
DOCKER_HOST=
DOCKER_IMAGE_NAME=cpt-scraper-image

# ============================================================================
# CORS Settings
# ============================================================================
# Comma-separated list of allowed origins (use * for development)
CORS_ORIGINS=*

# ============================================================================
# Scraper Configuration
# ============================================================================
SCRAPERS_BASE_PATH=/app/cpt_automated_scripts
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT_SECONDS=3600

# ============================================================================
# Cron Job Settings
# ============================================================================
CRON_ENABLED=True
CRON_MONTH=11
CRON_DAY=25
CRON_HOUR=0
CRON_MINUTE=0
